#
# Use DXDisplay to generate raw data histograms ignoring pedestals.
#
# Usage example:

#include "DXDisplay.fcl"

physics.analyzers.DXDisplay.DebugLevel:            1
#physics.analyzers.DXDisplay.DebugLevel:            5    # dumps every channel
#physics.analyzers.DXDisplay.DebugLevel:            6    # dumps every tick
physics.analyzers.DXDisplay.TdcTickMax:         2800    # 1 drift is about 2780 ticks
physics.analyzers.DXDisplay.DoRawSignalHists:   true
physics.analyzers.DXDisplay.DoSimChannelSignalHists:  true

physics.analyzers.DXDisplay.RawPedestalOption:  0
